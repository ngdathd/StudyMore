<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorApp"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_very_large">

    <ImageView
        android:id="@+id/img_intro2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="84dp"
        android:src="@drawable/img_intro_2" />

    <TextView
        android:id="@+id/description2b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:layout_marginLeft="@dimen/margin_very_large"
        android:layout_marginRight="@dimen/margin_very_large"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_large"
        android:paddingTop="@dimen/margin_large"
        android:text="@string/description2b"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/description2a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/description2b"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_large"
        android:paddingTop="@dimen/margin_large"
        android:text="@string/description2a"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="italic|bold" />

</RelativeLayout>